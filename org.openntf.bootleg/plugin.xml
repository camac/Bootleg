<plugin>

   <extension
         id="BootlegBuilder"
         name="Bootleg Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="org.openntf.bootleg.builder.BootlegBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="bootlegNature"
         name="Bootleg Metadata Filter Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.openntf.bootleg.builder.BootlegNature">
         </run>
      </runtime>
      <builder
            id="org.openntf.bootleg.BootlegBuilder">
      </builder>
   </extension>
      
   
   <extension
         id="bootlegProblem"
         name="Bootleg Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.openntf.bootleg.pref.BootlegPreferencePage"
            id="org.openntf.bootleg.bootlegPage"
            name="Bootleg">
      </page>
   </extension>

   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="org.openntf.bootleg.menuPopupNsf"
               label="Bootleg">
            <command
                  commandId="org.openntf.bootleg.commands.addbootleg"
                  mode="FORCE_TEXT"
                  style="push">
            </command>
            <command
                  commandId="org.openntf.bootleg.commands.removebootleg"
                  mode="FORCE_TEXT"
                  style="push">
            </command>
            <command
                  commandId="org.openntf.bootleg.commands.bootleg"
                  mode="FORCE_TEXT"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="menu:file?after=additions2">
         <menu
               id="org.openntf.bootleg.menuFileNsf"
               label="Bootleg">
            <command
                  commandId="org.openntf.bootleg.commands.addbootleg"
                  mode="FORCE_TEXT"
                  style="push">
            </command>
            <command
                  commandId="org.openntf.bootleg.commands.removebootleg"
                  mode="FORCE_TEXT"
                  style="push">
            </command>
            <separator
                  name="org.openntf.bootleg.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.openntf.bootleg.commands.startLogging"
                  mode="FORCE_TEXT"
                  style="push">
            </command>
            <command
                  commandId="org.openntf.bootleg.commands.stopLogging"
                  mode="FORCE_TEXT"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.openntf.bootleg.commands.addbootleg"
            name="Add Bootleg">
      </command>
      <command
            id="org.openntf.bootleg.commands.removebootleg"
            name="Remove Bootleg">
      </command>
      <command
            id="org.openntf.bootleg.commands.bootleg"
            name="Bootleg">
      </command>
      <command
            id="org.openntf.bootleg.commands.stopLogging"
            name="Stop Logging">
      </command>
      <command
            id="org.openntf.bootleg.commands.startLogging"
            name="Start Logging">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.openntf.bootleg.handlers.AddBootlegHandler"
            commandId="org.openntf.bootleg.commands.addbootleg">
         <enabledWhen>
         
          <with variable="selection">
      <iterate ifEmpty="true" operator="and">
         <adapt type="org.eclipse.core.resources.IResource">
            <not>
               <test
                     property="org.eclipse.core.resources.projectNature"
                     value="org.openntf.bootleg.bootlegNature" />
            </not>
         </adapt>
      </iterate>
   </with>
         
         </enabledWhen>
      </handler>
      <handler
            class="org.openntf.bootleg.handlers.RemoveBootlegHandler"
            commandId="org.openntf.bootleg.commands.removebootleg">
                     <enabledWhen>
                     
                     <with variable="selection">
      <iterate ifEmpty="false" operator="or">
         <adapt type="org.eclipse.core.resources.IResource">
            <test
                  property="org.eclipse.core.resources.projectNature"
                  value="org.openntf.bootleg.bootlegNature" />
         </adapt>
      </iterate>
   </with>
                     
         </enabledWhen>
            
      </handler>
      <handler
            class="org.openntf.bootleg.action.BootlegAction"
            commandId="org.openntf.bootleg.commands.bootleg">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <adapt
                        type="org.eclipse.core.resources.IResource">
                     <test
                           property="org.eclipse.core.resources.projectNature"
                           value="org.openntf.bootleg.bootlegNature">
                     </test>
                  </adapt>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.openntf.bootleg.handlers.StartLoggingHandler"
            commandId="org.openntf.bootleg.commands.startLogging">
      </handler>
      <handler
            class="org.openntf.bootleg.handlers.StopLoggingHandler"
            commandId="org.openntf.bootleg.commands.stopLogging">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="org.openntf.bootleg.pref.BootlegPreferencePage"
            id="org.openntf.bootleg.bootlegPropertyPage"
            name="Bootleg">
         <enabledWhen>
            <and>
               <instanceof
                     value="org.eclipse.core.resources.IProject">
               </instanceof>
               <adapt
                     type="org.eclipse.core.resources.IResource">
                  <test
                        property="org.eclipse.core.resources.projectNature"
                        value="org.openntf.bootleg.bootlegNature">
                  </test>
               </adapt>
            </and>
         </enabledWhen>
      </page>
   </extension>


</plugin>
